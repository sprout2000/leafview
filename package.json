{
  "name": "leafview",
  "productName": "LeafView",
  "description": "Minimalist image viewer based on Leaflet.js and Electron.",
  "version": "3.9.4",
  "license": "MIT",
  "author": {
    "name": "sprout2000",
    "email": "wassabie64@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/leafview.git"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:rspack dev:electron",
    "dev:rspack": "rspack --node-env \"development\"",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electronmon .",
    "build": "rimraf dist && rspack --node-env \"production\"",
    "lint": "biome check --write .",
    "package": "ts-node scripts/packager.ts",
    "release": "ts-node scripts/builder.ts"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.7.3",
    "i18next": "^25.7.3",
    "leaflet": "^1.9.4",
    "mime-types": "^3.0.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@rspack/cli": "^1.6.8",
    "@rspack/core": "^1.6.8",
    "@types/leaflet": "^1.9.21",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.19.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "sass": "^1.97.1",
    "sass-loader": "^16.0.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
